<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Recipe Image -->
    <ImageView
        android:id="@+id/ivRecipeImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Recipe Image" />

    <!-- User Name and Age -->
    <TextView
        android:id="@+id/tvUserDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amit, 23"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="#A5D6A7"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/ivRecipeImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Recipe Title -->
    <TextView
        android:id="@+id/tvRecipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fluffy Pancakes"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 minutes"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvRecipeTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Difficulty Level -->
    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty 3/5"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Calories (Placeholder) -->
    <TextView
        android:id="@+id/tvCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="later"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Diet Label (Placeholder) -->
    <TextView
        android:id="@+id/tvDietLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="later"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvCalories"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Health Label (Placeholder) -->
    <TextView
        android:id="@+id/tvHealthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="later"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvDietLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Total Nutrition (Placeholder) -->
    <TextView
        android:id="@+id/tvCuisineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="later"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvHealthLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvMealType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="later"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvCuisineType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Ingredients Title -->
    <TextView
        android:id="@+id/tvIngredientsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvMealType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Ingredients List -->
    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="190g Flour, 4 teaspoons Baking powder, pinch of salt, 2 tablespoons Sugar, 1 Large Egg, 310ml Milk, 60g Melted Butter, 1/2 teaspoon Vanilla Extract"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvIngredientsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Instructions Title -->
    <TextView
        android:id="@+id/tvInstructionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions:"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvIngredients"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Measure out the flour, salt and sugar if youâ€™re using it and add to medium sized mixing bowl. Use a whisk or a wooden spoon to combine the dry ingredients together and set to the side. In a smaller bowl add the wet ingredients. The egg, milk, melted butter and vanilla extract. Give this a mix with a fork until well combined."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvInstructionsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>