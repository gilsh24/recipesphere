<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layoutDirection="ltr"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Recipe Image" />

        <TextView
            android:id="@+id/tvUserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amit, 23"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="#A5D6A7"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/ivRecipeImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fluffy Pancakes"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tvUserDetails"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvRecipeTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 minutes"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvRecipeTitle"
            app:layout_constraintStart_toEndOf="@id/tvTimeLabel"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDifficultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/5"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toEndOf="@id/tvDifficultyLabel"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvCaloriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Calories"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
            app:layout_constraintStart_toEndOf="@id/tvCaloriesLabel"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDietLabelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Labels: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvCalories"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDietLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Labels"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvCalories"
            app:layout_constraintStart_toEndOf="@id/tvDietLabelLabel"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvHealthLabelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Labels: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvDietLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvHealthLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Health Labels"
            android:ellipsize="none"
            android:singleLine="false"
            android:breakStrategy="high_quality"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvDietLabel"
            app:layout_constraintStart_toEndOf="@id/tvHealthLabelLabel"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvCuisineTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisine Type: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvHealthLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvCuisineType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisine Type"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvHealthLabel"
            app:layout_constraintStart_toEndOf="@id/tvCuisineTypeLabel"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvMealTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Type: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvCuisineType"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvMealType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Type"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvCuisineType"
            app:layout_constraintStart_toEndOf="@id/tvMealTypeLabel"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvIngredientsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvMealType"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="14sp"
            android:breakStrategy="high_quality"
            android:ellipsize="none"
            android:singleLine="false"
            app:layout_constraintTop_toBottomOf="@id/tvIngredientsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvInstructionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvIngredients"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="14sp"
            android:ellipsize="none"
            android:singleLine="false"
            android:breakStrategy="high_quality"
            app:layout_constraintTop_toBottomOf="@id/tvInstructionsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>